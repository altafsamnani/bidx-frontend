                        <div class="span6">
                            <div class="control-group formfield">
                                <label class="control-label">Suggested productService</label>
                                <div class="controls">
                                    <input type="text" name="suggestedProductService" class="bidx-tagsinput" placeholder="Tags">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span6">
                            <div class="control-group formfield">
                                <label class="control-label">socialImpact</label>
                                <div class="controls">
                                    <input type="text" name="socialImpact" class="bidx-tagsinput disabled" disabled data-bidxdatakey="socialImpact" placeholder="Tags">
                                </div>
                            </div>
                        </div>
                        <div class="span6">
                            <div class="control-group formfield">
                                <label class="control-label">envImpact</label>
                                <div class="controls">
                                    <input type="text" name="envImpact" class="bidx-tagsinput" placeholder="Tags">
