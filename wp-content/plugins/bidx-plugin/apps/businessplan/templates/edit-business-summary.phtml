                <fieldset class="well">
                    <span class="scrollPositionMarker" id="editBusinessSummary/BusinessSummary/aboutYourBusiness"></span>
                    <legend>Tell us more about your business</legend>

                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group formfield">
                                <label class="control-label">Provide a summary of your business in maximum 150 words</label>
                                <div class="controls">
                                    <textarea name="summary" placeholder="Please give a summary of your business"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span6">
                            <div class="control-group formfield">
                                <label class="control-label">Reason for submission of business summary</label>
                                <div class="controls">
                                    checkbox thingy / toggle button
                                    <input type="checkbox" name="reasonForSubmission" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span6">
