                                    <input type="checkbox" name="consumerType" />
                                </div>
                            </div>
                        </div>
                        <div class="span6">
                            <div class="control-group formfield">
                                <label class="control-label">Investment type</label>
                                <div class="controls">
                                    checkbox thingy, rendered from the list "investmentType"
                                    <input type="checkbox" name="investmentType" />
                                </div>
                            </div>
                        </div>
                    </div>

