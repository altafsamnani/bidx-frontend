                <fieldset class="well">
                    <span class="scrollPositionMarker" id="editBusinessSummary/BusinessSummary/businessSummary"></span>
                    <legend>Business summary</legend>

                    <div class="row-fluid">
                        <div class="span6">

                            <div class="control-group formfield">
                                <label class="control-label">Describe your business name in 5 words</label>
                                <div class="controls">
                                    <input type="text" name="name" placeholder="Business name">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group formfield">
                                <label class="control-label">Describe your business in 15 words ( optional )</label>
                                <div class="controls">
                                    <textarea type="text" name="slogan" placeholder="Please give a description of your business"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span6">
                            <div class="control-group formfield">
                                <label class="control-label">Industry</label>
                                <div class="controls">
                                    <input type="text" name="industry" class="bidx-tagsinput disabled" disabled data-bidxdatakey="industry" placeholder="Tags">
                                </div>
                            </div>
                        </div>
                        <div class="span6">
                            <div class="control-group formfield">
                                <label class="control-label">Suggested industry</label>
                                <div class="controls">
                                    <input type="text" name="suggestedIndustry" class="bidx-tagsinput" placeholder="Tags">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span6">
                            <div class="control-group formfield">
                                <label class="control-label">Country of business</label>
                                <div class="controls">
                                    <input type="text" name="countryOperation" class="bidx-tagsinput disabled" disabled data-bidxdatakey="country" placeholder="Tags">
                                </div>
                            </div>
                        </div>
                        <div class="span6">
                            <div class="control-group formfield">
                                <label class="control-label">Stage of business</label>
                                <div class="controls">
                                    toggle button group thingy (2 options)
                                    <input type="checkbox" name="stageOfBusiness" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span6">
                            <div class="control-group formfield">
                                <label class="control-label">productService</label>
                                <div class="controls">
                                    <input type="text" name="productService" class="bidx-tagsinput disabled" disabled data-bidxdatakey="productService" placeholder="Tags">
