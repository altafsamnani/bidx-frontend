                        </div>

                        <div class="form-group">
                            <label><?php _e('New password','bidxplugin');?></label>
                            <input type="password" class="form-control" name="newPassword" placeholder="<?php _e('Enter your new password','bidxplugin');?>" />
                        </div>

                        <div class="form-group">
                            <label><?php _e('Repeat new password','bidxplugin');?></label>
                            <input type="password" class="form-control" name="newPasswordRepeat" placeholder="<?php _e('Repeat your new password','bidxplugin');?>" />
