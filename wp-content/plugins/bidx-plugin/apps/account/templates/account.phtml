<div id="account" class="block-odd mainState mainStateAccount top-margin-lineheight">
    <!-- mail stage: this is the ajax target -->
    <section>

        <!-- ************************* utility views *********************************** -->
        <article class="view viewLoad"><?php _e('Loading...','bidxplugin')?>
        </article>

        <article class="view viewError alert alert-warning">
            <h1><?php _e('Error','bidxplugin')?></h1>
            <div class="errorMsg"></div>
            <p>
                <a href="/account">Try again</a>
            </p>
        </article>

        <article class="view viewCredentials">

            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 well">
                    <form id="frmCredentials" action="/">
                        <h1><?php _e('Account settings','bidxplugin');?></h1>
                        <h3><?php _e('Change your password', 'bidxplugin')?></h3>
                        <p>
                            <?php _e('Here you can change your password.', 'bidxplugin')?>
