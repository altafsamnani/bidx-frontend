                $joinLink = ($this->exst($groupValue->join)) ? "<a class='btn btn-xs btn-warning pull-right' href='#joinGroup/".$groupValue->bidxGroupId."'>" . __('Join','bidxplugin') . "</a>":'';
?>
                <li class="media">
                    <div class="pull-left">
                        <div class="icons-rounded pull-left"><i class="fa fa-group text-primary-light"></i></div>
                    </div>
                    <div class="media-body">
                        <h4><?php echo $groupValue->name?></h4>
