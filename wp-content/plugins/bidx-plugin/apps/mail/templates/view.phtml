                        <li class="next"><a class="fui-arrow-right" href="#fakelink"></a></li>
                    </ul>
                </div>
            </div>
        </article>

        <!-- read view -->
        <article class="view viewRead">
              <!-- TOOLBAR -->
            <div class="mail-toolbar">
                <div class="btn-group">
                    <a class="btn btn-small btn-primary" href="#/mail/#mail/reply/">Reply</a>
                    <!-- <a class="btn btn-small btn-primary" href="#fakelink">Reply All</a> -->
                    <a class="btn btn-small btn-primary" href="/mail/#mail/forward/">Forward</a>
                    <a class="btn btn-small btn-primary" href="/mail/#mail/deleteConfirm/">Delete</a>
<!--                     <a class="btn btn-small btn-primary" href="#fakelink">Report</a> -->
                </div>
            </div>

                <div class="row-fluid">
                    <div class="span12 mail-message">
                        Loading...
                    </div>
                </div>


        </article>


        <!-- Compose view -->
        <article class="view viewCompose">

            <div class="row-fluid">
                <div class="control-group span12">
                    <div class="control-group formfield">
                        <div class="controls">
                            <input type="text" name="contacts" class="bidx-tagsinput" data-bidxdataservice="mail.memberRelationships" placeholder="Recipient">
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                <div class="control-group span12">
                    <div class="input-prepend ">
                        <span class="add-on">Subject</span>
                        <input id="prependedInput" type="text" placeholder="Add people you want to send a copy">
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <textarea></textarea>
                    </div>
                </div>
            </div>
        </article>

        <!--  ************************** MODAL VIEWS ****************************************** -->
        <article class="view viewDeleteConfirm">
            <!-- Modal -->
            <div class="modal hide fade bidx-modal-deleteEmail" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                    <h3 id="myModalLabel">Delete message</h3>
                </div>
                <div class="modal-body">
                <p>
                    You are about to remove this message. Are you sure?
                </p>
                </div>
                <div class="modal-footer">
                    <a class="btn" data-dismiss="modal" aria-hidden="true">Close</a>
                    <a class="btn btn-primary" href="/mail/#mail/delete/">Delete message</a>
                </div>
            </div>
        </article>

    </section>

