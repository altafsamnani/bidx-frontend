<?xml version="1.0" encoding="UTF-8"?>
<data xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="./pages.xsd">

	<posttype>page</posttype>
	<description>List of public editable page resources for the enduser to manage</description>
	<version>1.0</version>
	<!--
		WP Page preloader:
		Use <content> only with escaped html
		Use <htmlTenpplate> with the template name without extention that has to be available in the templates folder. The content of the htmlTemplate will overwrite the content of the <content> tag.
		Add template filename in <template> tag set a template
		Use <setHomePage>true</setHomePage> to set page as Homepage

		NOTE: adding comment between the xml childs will break the import
	-->
	<posts>
		 <post>
            <post_id>0</post_id>
            <name>homepage</name>
            <title>Home</title>
            <content>
				&lt;div class="row"&gt;
					&lt;div class="col-sm-8"&gt;
	                [bidx app="group" view="list-groups"]
	                [bidx app="group" view="last-members"]
					&lt;/div&gt;
					&lt;div class="col-sm-4"&gt;
	                [bidx app="group" view="group-details"]
					&lt;/div&gt;
				&lt;/div&gt;
            </content>
            <update>true</update>
            <template>page-intro.php</template>
            <setHomePage>true</setHomePage>
            <setTranslate>true</setTranslate>
        </post>
		<post>
			<post_id>1</post_id>
			<name>Terms of Service</name>
			<title>Terms of Service</title>
			<update>true</update>
			<template>template-full.php</template>
			<htmlTemplate>terms-of-service</htmlTemplate>
			<content></content>
			<setTranslate>true</setTranslate>
		</post>

	</posts>

</data>
